<div class='p-5 bg-zinc-800 border border-zinc-700 shadow-md shadow-zinc-950/90 rounded-xl flex justify-between items-center'>
  <div>
    <h3 class='text-lg font-medium'><%= team.name %></h3>
    <div class='mt-2 text-sm'>
      <% team.players.each do |player| %>
        <div class='text-zinc-400'>
          <%= player.name %>
        </div>
      <% end %>
    </div>
  </div>
  <div class='text-4xl text-zinc-500 mr-8'>
    <%= team.players.count %>
  </div>
</div>