<div class='mt-4 space-y-4'>
  <% @games.each do |game| %>
    <div>
      <%= link_to matches_game_path(game) do %>
        <div class='p-4 bg-gray-900 rounded-lg'>
          <%= game.created_at.strftime('%d. %m.') %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class='mt-6 flex justify-center items-center'>
  <%= button_to games_path do %>
    <div class='bg-indigo-500 w-10 h-10 flex justify-center items-center text-2xl rounded-full'>+</div>
  <% end %>
</div>
